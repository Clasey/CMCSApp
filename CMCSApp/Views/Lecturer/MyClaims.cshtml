@model IEnumerable<CMCSApp.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
    Layout = "_Layout";
}

<h2>My Submitted Claims</h2>

<table class="table table-striped mt-3">
  <thead>
    <tr>
      <th>Claim ID</th>
      <th>Month</th>
      <th>Hours</th>
      <th>Status</th>
      <th>Submitted</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var c in Model)
    {
      <tr>
        <td>@c.ClaimId</td>
        <td>@c.Month</td>
        <td>@c.HoursWorked</td>
        <td>@c.Status</td>
        <td>@c.SubmittedAt.ToString("dd MMM yyyy")</td>
        <td>
          <a class="btn btn-sm btn-outline-primary" href="/Coordinator/ViewClaim?id=@c.ClaimId">View</a>
        </td>
      </tr>
    }
  </tbody>
</table>
