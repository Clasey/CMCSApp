@model CMCSApp.Models.Claim
@{
    ViewData["Title"] = "Claim Confirmation";
    Layout = "_Layout";
}

<div class="card">
  <div class="card-body">
    <h4 class="card-title mb-3">Claim Submitted</h4>

    <p><strong>Claim ID:</strong> @Model.ClaimId</p>
    <p><strong>Month:</strong> @Model.Month</p>
    <p><strong>Hours:</strong> @Model.HoursWorked</p>
    <p><strong>Hourly Rate:</strong> R@Model.HourlyRate</p>
    <p><strong>Status:</strong> @Model.Status</p>

    <div class="mt-3">
      <a class="btn btn-success" href="/Lecturer/Upload?id=@Model.ClaimId">Upload Documents</a>
      <a class="btn btn-secondary" href="/Lecturer/Fill">Submit another</a>
    </div>
  </div>
</div>
