@model IEnumerable<CMCSApp.Models.Claim>
@{
    Layout = "_Layout";
}
<h2>Academic Manager | Approve / Reject</h2>

<table class="claims-table">
    <thead>
        <tr><th>Claim ID</th><th>Lecturer</th><th>Month</th><th>Hours</th><th>Status</th><th>Action</th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ClaimId</td>
                <td>@c.LecturerId</td>
                <td>@c.Month</td>
                <td>@c.HoursWorked</td>
                <td>@c.Status</td>
                <td>
                    <form method="post" asp-action="Approve" style="display:inline">
                        <input type="hidden" name="id" value="@c.ClaimId" />
                        <button class="btn small" type="submit">Approve</button>
                    </form>
                    <a class="btn alt small" href="/Manager/Reject?id=@c.ClaimId">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
