@model IEnumerable<CMCSApp.Models.Claim>
@{
    ViewData["Title"] = "Approve or Reject";
    Layout = "_Layout";
}

<h2>Approve / Reject Claims</h2>

<table class="table table-striped mt-3">
  <thead>
    <tr>
      <th>Claim ID</th>
      <th>Lecturer</th>
      <th>Month</th>
      <th>Hours</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var c in Model)
    {
      <tr>
        <td>@c.ClaimId</td>
        <td>@c.LecturerId</td>
        <td>@c.Month</td>
        <td>@c.HoursWorked</td>
        <td>@c.Status</td>
        <td>
          <form method="post" asp-action="Approve" class="d-inline">
            <input type="hidden" name="id" value="@c.ClaimId" />
            <button class="btn btn-sm btn-success">Approve</button>
          </form>
          <a class="btn btn-sm btn-danger ms-1" href="/Manager/Reject?id=@c.ClaimId">Reject</a>
        </td>
      </tr>
    }
  </tbody>
</table>
