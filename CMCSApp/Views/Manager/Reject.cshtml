@model CMCSApp.Models.Claim
@{
    ViewData["Title"] = "Reject Claim";
    Layout = "_Layout";
}

<h2>Reject Claim @Model.ClaimId</h2>

<form asp-action="Reject" method="post">
  <input type="hidden" name="id" value="@Model.ClaimId" />
  <div class="mb-3">
    <label for="reason" class="form-label">Reason for rejection</label>
    <textarea id="reason" name="reason" class="form-control" rows="4" required></textarea>
  </div>

  <div class="d-flex gap-2">
    <button type="submit" class="btn btn-danger">Reject Claim</button>
    <a class="btn btn-secondary" href="/Manager/ApproveReject">Cancel</a>
  </div>
</form>
