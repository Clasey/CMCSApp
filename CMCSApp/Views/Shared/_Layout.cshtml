@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext?.User;
    var isAuthenticated = user?.Identity?.IsAuthenticated ?? false;
    var name = isAuthenticated ? user?.Identity?.Name : "Guest";
    var role = user?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>CMCS - @ViewData["Title"]</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384..." crossorigin="anonymous">

  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <header class="bg-white shadow-sm mb-4">
    <div class="container d-flex align-items-center justify-content-between py-3">
      <div>
        <a class="text-decoration-none" href="/">
          <h3 class="mb-0">CMCS</h3>
          <small class="text-muted">Contract Management Claim System</small>
        </a>
      </div>

      <div class="d-flex align-items-center">
        @if (!isAuthenticated)
        {
            <a class="btn btn-outline-primary me-2" href="/Account/Login">Login</a>
            <a class="btn btn-outline-secondary me-3" href="/Account/Register">Register</a>
        }
        else
        {
            <div class="me-3 text-end">
                <div class="fw-bold">@name</div>
                <small class="text-muted">@role</small>
            </div>
            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                <button class="btn btn-danger" type="submit">Logout</button>
            </form>
        }
      </div>
    </div>
  </header>

  <main class="container mb-5">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @RenderBody()
  </main>

  <footer class="bg-light py-3 mt-auto">
    <div class="container text-center text-muted">
      © @DateTime.UtcNow.Year CMCS — Terms | Privacy Policy | Support
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384..." crossorigin="anonymous"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
