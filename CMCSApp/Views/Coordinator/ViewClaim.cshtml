@model CMCSApp.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
    Layout = "_Layout";
}

<div class="card">
  <div class="card-body">
    <h4 class="card-title">Claim Details</h4>

    <dl class="row">
      <dt class="col-sm-3">Claim ID</dt>
      <dd class="col-sm-9">@Model.ClaimId</dd>

      <dt class="col-sm-3">Lecturer</dt>
      <dd class="col-sm-9">@Model.LecturerId</dd>

      <dt class="col-sm-3">Month</dt>
      <dd class="col-sm-9">@Model.Month</dd>

      <dt class="col-sm-3">Hours</dt>
      <dd class="col-sm-9">@Model.HoursWorked</dd>

      <dt class="col-sm-3">Hourly Rate</dt>
      <dd class="col-sm-9">R@Model.HourlyRate</dd>

      <dt class="col-sm-3">Status</dt>
      <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <div class="mt-3">
      <a class="btn btn-secondary" href="/Coordinator/Review">Back</a>
    </div>
  </div>
</div>
