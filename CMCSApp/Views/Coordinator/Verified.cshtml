@model IEnumerable<CMCSApp.Models.Claim>
@{
    Layout = "_Layout";
}
<h2>Verified Claims</h2>

<table class="claims-table">
    <thead>
        <tr><th>Claim ID</th><th>Lecturer</th><th>Month</th><th>Hours</th><th>Status</th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ClaimId</td>
                <td>@c.LecturerId</td>
                <td>@c.Month</td>
                <td>@c.HoursWorked</td>
                <td>@c.Status</td>
            </tr>
        }
    </tbody>
</table>
