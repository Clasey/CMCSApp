@model IEnumerable<CMCSApp.Models.Claim>
@{
    ViewData["Title"] = "Review Claims";
    Layout = "_Layout";
}

<h2>Claims Awaiting Review</h2>

<table class="table table-hover mt-3">
  <thead>
    <tr>
      <th>Claim ID</th>
      <th>Lecturer</th>
      <th>Month</th>
      <th>Hours</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var c in Model)
    {
      <tr>
        <td>@c.ClaimId</td>
        <td>@c.LecturerId</td>
        <td>@c.Month</td>
        <td>@c.HoursWorked</td>
        <td>@c.Status</td>
        <td>
          <form method="post" asp-action="Verify" class="d-inline">
            <input type="hidden" name="id" value="@c.ClaimId" />
            <button type="submit" class="btn btn-sm btn-success">Verify</button>
          </form>
          <form method="post" asp-action="SendBack" class="d-inline ms-1">
            <input type="hidden" name="id" value="@c.ClaimId" />
            <button type="submit" class="btn btn-sm btn-warning">Send Back</button>
          </form>
          <a class="btn btn-sm btn-outline-secondary ms-1" href="/Coordinator/ViewClaim?id=@c.ClaimId">View</a>
        </td>
      </tr>
    }
  </tbody>
</table>
